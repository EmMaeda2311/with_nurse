<div class="container contact-new">
  <%= form_with model: @contact, local:true, :url => {:action => :create} do |form| %>

    <div class="form-group">
      <%= form.label :name, 'お名前' %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :email, '返信先メールアドレス' %>
      <%= form.text_field :email, class: 'form-control' %>
    </div>

  <div class="form-group">
    <%= form.label :message, 'お問い合わせ内容' %>
    <%= form.text_area :message, size: '10x10', class: 'form-control' %>
  </div>

    <%= form.submit '送信', class: "btn btn-pink btn-lg" %>

  <% end %>
</div>
