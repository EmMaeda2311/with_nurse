<div class="users-blog">
  <hr>
  <li id="blog-<%= blog.id %>">
    <div class="blog-title"><%= blog.title %></div>
    <div class="content"><%= strip_tags(blog.content.to_s).gsub(/[\n]/,"").strip.truncate(10) %></div>
    <div class="timestamp">
      Posted <%= time_ago_in_words(blog.created_at) %> 前
    </div>
    <div class="user"><%= link_to blog.user.username, blog.user %></div>
    <hr>
  </li>
</div>