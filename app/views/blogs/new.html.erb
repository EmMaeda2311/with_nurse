<div class="container">
  <h2>新規作成</h2>
  <%= form_with model: @blog, local:true do |form| %>
  
  <%= render '/shared/error_messages', object: form.object %>
    

    <div class="form-group">
      <%= form.label "タイトル" %><br />
      <%= form.text_field :title, class: "form-control"  %>
    </div>

    <div class="form-group">
      <%= form.label "本文" %><br />
      <%= form.rich_text_area :content, class:"form-control" %>
    </div>

    <hr>

    <div class="form-label-group col-md-3 mx-auto brog-create">
      <%= form.submit "作成", class: "btn btn-lg btn-pink btn-block" %>
    </div>
  <% end %>
</div>

<% if @blog.errors.any? %>
  <%= javascript_pack_tag 'blogs/render' %>
<%end%>
