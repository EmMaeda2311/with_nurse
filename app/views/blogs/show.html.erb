 <div class="container blog-content">
    
  <h1><%= @blog.title%></h1>
  
  <div class="tags">
    <ul class="flex" style="list-style:none;">
      <% @blog.tags.each do |tag| %>
          <li class="tag-list">
            <%= tag.name %>
          </li>
      <% end %>      
    </ul>
  </div>

  <div class="flex">
    
    <% if user_signed_in? %>
      <div id="like">
        <like-button :user-id="<%= current_user.id %>" :blog-id="<%= @blog.id%>"></like-button>
      </div>
    <% else %>
       <div class="like">
        <%= "#{@blog.likes.count} Good Nurse" %>
       </div> 
      <% end %>
      
    <div class="edit-icon">
      <%= link_to image_tag("edit.png",alt: "編集" ,width: "20px"), edit_blog_path%>
    </div>

    <div class="delete-link">
      <%= link_to "削除", @blog, method: :delete, data:{ confirm:"削除しますか？"} %>
    </div>
  </div>

  <hr>
  
  <div class="col-md-8">
    <%= @blog.content %>
  </div>

  
 </div>