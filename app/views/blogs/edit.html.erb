<div class="container">
  <h2>記事編集</h2>
  <%= form_with model: @blog do |form| %>
  <%= render '/shared/error_messages', object: form.object %>
    

    <div class="form-group">
      <%= form.label :title %><br />
      <%= form.text_field :title, class: "form-control"  %>
    </div>

    <div class="form-group">
      <%= form.label :content %><br />
      <%= form.rich_text_area :content, class:"form-control" %>
    </div>

    <hr>

    <div class="form-label-group col-md-3 mx-auto brog-create">
      <%= form.submit "編集", class: "btn btn-lg btn-pink btn-block" %>
    </div>
  <% end %>
</div>

<% if @blog.errors.any? %>
  <%= javascript_pack_tag 'blogs/render' %>
<%end%>
